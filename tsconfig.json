{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "moduleResolution": "NodeNext",
    "noImplicitAny": false,
    "target": "es2020",
    "declaration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}
